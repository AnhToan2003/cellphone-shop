{
  "name": "cellphone-shop",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev:watch",
    "dev:watch": "concurrently \"npm:dev-server\" \"npm:build-watch\"",
    "dev-server": "npm --prefix server run dev",
    "build-watch": "npm --prefix client run build:watch",
    "build": "npm --prefix client run build",
    "test": "npm --prefix server run test",
    "seed": "npm --prefix server run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

